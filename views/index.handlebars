	</div>

	<div class="d-flex flex-wrap justify-content-center">
		<h2>Eat-Da-Burger</h2>
	</div>

	<div class="d-flex flex-wrap">
		<ul>
			{{#each burger_name}}
			{{#unless devoured}}
			<li id="burgerList">
				<span style="display: inline;">
				{{this.id}}. {{this.burger_name}}
				<button id="button" class="btn btn-primary devour" data-id="{{id}}" data-devour="{{devoured}}">devour</button>
				</span>
			</li>

			{{/unless}}
				{{#unless devoured}}
				{{else}}
					<h6 class="devourBurger">{{this.burger_name}}</h6>

				{{/unless}}
			{{/each}}
		</ul>
	</div>
	<div class="d-flex flex-wrap justify-content-center">
			<form class="create">
				<div class="form-group d-flex">
					<label for="burger"></label>
					<input id="burger" type="text" class="border p-2 flex-fill">
<!--					<input type="text" id="burger" name="burger_name">-->
				</div>
					<button class="btn btn-primary createBurger" type="submit">Submit</button>
					<p class="mt-3"> Enter the Burger you want to eat and hit submit </p>
			</form>
	</div>
